{
  "name": "futbol",
  "version": "2.0.0",
  "description":
    "üèÜ Generador de los sitios est√°ticos para mostrar las estad√≠sticas del f√∫tbol de la comunidad desde una Google Spreadsheet.",
  "scripts": {
    "build-prod": "REACT_APP_VERSION=${npm_package_version} react-scripts build",
    "clean-deploys": "now rm $REACT_INSTANCE_NAME --safe --token $NOW_TOKEN --yes",
    "contributors-add": "all-contributors add",
    "contributors-generate": "all-contributors generate",
    "deploy":
      "now alias $(now --name $REACT_INSTANCE_NAME --npm --token $NOW_TOKEN) $REACT_INSTANCE_NAME --token=$NOW_TOKEN",
    "dev": "REACT_APP_VERSION=${npm_package_version} react-scripts start",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "scale": "now scale $REACT_INSTANCE_NAME'.now.sh' 1 --token $NOW_TOKEN",
    "start": "serve build"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --arrow-parens always --print-width 100 --single-quote --write",
      "git add"
    ]
  },
  "now": {
    "env": {
      "NODE_ENV": "production"
    },
    "files": ["build"],
    "public": true,
    "type": "npm"
  },
  "author": "@durancristhian",
  "license": "MIT",
  "devDependencies": {
    "all-contributors-cli": "^4.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "gsheets": "^2.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-images": "^0.5.17",
    "react-scripts": "1.1.4",
    "react-tilt": "^0.1.4",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "dependencies": {
    "serve": "^6.5.0"
  }
}
